<%- include('partials/header') %>


<style>
  #intro {
    background-image: url("https://miro.medium.com/max/11406/0*ZkIxoGuNhbvOqcKO");
    height:100vh;
    background-size: cover;
  }
</style>


  <div id="intro" class="bg-image shadow-2-strong container-fluid">
    <div class="container align-items-center justify-content-center text-center h-100">

      <div class="container">
        <i class="fas fa-key fa-6x" style="color:#E8ECEF"></i>
        <h1 class="display-3" style="color:#E8ECEF">You've Discovered My Secret!</h1>

        <div class="card-items">
          <% usersWithSecrets.forEach(function(user){ %>
          <% user.secret.forEach(function(sec){ %>
          <div <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%= user.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted"></h6>
              <p class="card-text"><%= sec %></p>

            </div>
          </div>
          <%  }) %>
          <% }) %>
        </div>
        <hr>
        <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
        <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
      </div>
    </div>

    <%- include('partials/footer') %>
